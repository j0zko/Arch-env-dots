* {
  font-family: "FiraCode Nerd Font", "Symbols Nerd Font", sans-serif;
  font-size: 14px;
  text-shadow: none;
}

.notification-center,
.control-center {
  background: rgba(10, 15, 30, 0.85);
  border: 1px solid rgba(65, 105, 225, 0.5);
  border-radius: 16px;
  padding: 15px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.7);
  backdrop-filter: blur(12px);
}

.notification {
  background: rgba(5, 10, 20, 0.7);
  border-radius: 12px;
  margin: 12px 0;
  border: 1px solid rgba(30, 50, 90, 0.8);
  box-shadow: inset 0 0 5px rgba(0, 0, 0, 0.5),
              0 2px 8px rgba(0, 0, 0, 0.3);
}

.notification.critical {
  border-left: 4px solid #ff5555;
}

.notification.low,
.notification.normal {
  border-left: 4px solid #458588;
}

.image {
  margin: 12px;
  border-radius: 8px;
  background: rgba(20, 30, 60, 0.6);
}

.summary {
  color: #82aaff;
  font-weight: bold;
  font-size: 15px;
  margin-bottom: 5px;
}

.body {
  color: #b8c5e0;
  font-size: 13px;
}

.app-name {
  color: #5e81ac;
  font-size: 12px;
}

.time {
  color: #4c566a;
  font-size: 11px;
}

.close-button {
  color: #81a1c1;
  background: transparent;
  border-radius: 6px;
  padding: 3px;
  margin: 0 5px;
  font-size: 16px;
}

.close-button:hover {
  color: #bf616a;
  background: rgba(100, 150, 255, 0.1);
}

.control-center .widget-title {
  color: #88c0d0;
  padding: 8px 12px;
  background: rgba(20, 40, 80, 0.4);
  border-radius: 8px;
  margin-bottom: 12px;
  font-size: 16px;
  border-bottom: 1px solid rgba(65, 105, 225, 0.3);
}

.control-center .notification-row:focus,
.notification:focus {
  outline: none;
  background: rgba(30, 50, 90, 0.6);
}

.progress-bar {
  background: rgba(40, 60, 100, 0.5);
  border-radius: 3px;
  margin: 8px 0;
}

.progress-bar trough {
  background: rgba(20, 40, 80, 0.5);
  border-radius: 3px;
}

.progress-bar progress {
  background: linear-gradient(to right, #5e81ac, #81a1c1);
  border-radius: 3px;
}

.control-center-empty {
  color: #4c566a;
  font-size: 40px;
  opacity: 0.5;
}

/* Nerd Font Icons */
.notification > * > .icon {
  font-family: "Symbols Nerd Font";
  font-size: 24px;
  margin-right: 10px;
}
